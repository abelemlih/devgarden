.nav-bar
  = link_to root_url, class: 'logo' do
    = image_tag image_url("devgarden-logo-small-white.svg"), alt: 'Dev Garden'
  .nav-items
    .nav-item= link_to 'About', page_path('about')
    .nav-item= link_to 'Contact', page_path('contact')
    .nav-item#auth-nav-item
      - auth_item_opts = { 'data-show-dropdown' => 'auth-dropdown', 'data-dropdown-header' => 'auth-nav-item' }
      - if logged_in?
        = link_to logout_path, auth_item_opts do
          - if current_user.avatar_url?
            %img.avatar{src: current_user.avatar_url}
          = current_user.name
      - else
        = link_to 'Log In', login_path, auth_item_opts
    %aside.dropdown#auth-dropdown
      %ul
        - if logged_in?
          %li= link_to "Edit Profile", edit_person_path(current_user)
          %li= link_to "Log Out", logout_path
        - else
          %li The Dev Garden uses Github for authentication.
          %li= link_to "Log in with Github", "/auth/github", class: "big-button"
  .clear
